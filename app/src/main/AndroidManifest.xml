<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naosteam.funnyvideo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:name="com.naosteam.funnyvideo.activities.MainApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WatchVideoApp"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
        <activity
            android:name="com.naosteam.funnyvideo.activities.YoutubePlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:exported="true" >
        </activity>
        <activity
            android:name="com.naosteam.funnyvideo.activities.DailymotionPlayerActivity"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:exported="true" />
        <activity
            android:name="com.naosteam.funnyvideo.activities.UpdateProfileGoogleActivity"
            android:exported="true" />
        <activity
            android:name="com.naosteam.funnyvideo.activities.VideoPlayerActivity"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:exported="true" />
        <activity
            android:name="com.naosteam.funnyvideo.activities.ForgotPassActivity"
            android:exported="true" />
        <activity
            android:name="com.naosteam.funnyvideo.activities.SignUpActivity"
            android:exported="true" />
        <activity
            android:name="com.naosteam.funnyvideo.activities.PurchaseActivity"
            android:exported="true" />
        <activity
            android:name="com.naosteam.funnyvideo.activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.naosteam.funnyvideo.activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.naosteam.funnyvideo.activities.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"
            >
        </activity>

        <receiver android:name="com.naosteam.funnyvideo.fragments.RadioFragment" />
    </application>

</manifest>